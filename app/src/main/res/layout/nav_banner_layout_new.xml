                                android:textSize="@dimen/nav_textsize_timeduration"/>
                        </LinearLayout>

                        <!-- left bottom part of third line -->

                        <LinearLayout
                            android:id="@+id/banner_basic_icons_layout_eu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/nav_channel_list_padTop"
                            android:layout_weight="4">

                            <TextView
                                android:id="@+id/banner_program_rating_eu"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.75"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_normal"/>

                            <!-- eu eye or ear hinder -->

                            <TextView
                                android:id="@+id/banner_channel_eys_ear_icon_eu"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.15"
                                android:drawableLeft="@drawable/nav_banner_eye_icon"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_normal"
                                android:visibility="visible"/>

                            <!-- lock icon -->

                            <TextView
                                android:id="@+id/banner_channel_lock_icon_eu"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.15"
                                android:drawableRight="@drawable/nav_banner_lock_icon"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_normal"
                                android:visibility="visible"/>
                            <!-- favorite icon -->

                            <TextView
                                android:id="@+id/banner_channel_favorite_icon_eu"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:drawableLeft="@drawable/nav_infobar_favorite"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_normal"
                                android:visibility="visible"/>

                            <!-- TTX icon -->

                            <TextView
                                android:id="@+id/banner_channel_ttx_icon_eu"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:drawableLeft="@drawable/nav_infobar_ttx_icon"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_timeduration"
                                android:visibility="visible"/>

                            <!-- subtitle icon -->

                            <TextView
                                android:id="@+id/banner_channel_subtitle_icon_eu"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:drawableLeft="@drawable/nav_banner_icon_sttl"
                                android:drawablePadding="@dimen/banner_channel_subtitle_icon_drawablePadding"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_timeduration"
                                android:visibility="visible"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- right part of third line -->

                    <LinearLayout
                        android:id="@+id/banner_basic_third_line_right_eu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:orientation="vertical">

                        <!-- video format -->

                        <TextView
