                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:textSize="@dimen/nav_textsize_normal"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
