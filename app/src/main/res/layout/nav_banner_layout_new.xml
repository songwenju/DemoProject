                        android:visibility="visible"/>

                    <!-- us CC icon -->

                    <TextView
                        android:id="@+id/banner_channel_cc_icon_us"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:drawableLeft="@drawable/nav_cc_icon"
                        android:drawablePadding="@dimen/banner_channel_subtitle_icon_drawablePadding"
                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_normal"
                        android:visibility="visible"/>

                    <!-- us video format -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/banner_video_format_us"
