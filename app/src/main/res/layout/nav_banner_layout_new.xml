                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_normal"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/banner_ginga_tv_icon_sa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.45"
                        android:drawableRight="@drawable/nav_infobar_ginga_icon"
                        android:textSize="@dimen/nav_textsize_normal"
                        android:visibility="visible"/>


                    <!-- us video format -->
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/banner_video_format_sa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:textSize="@dimen/nav_textsize_normal"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- banner info top-right part : simple info panel -->

        <LinearLayout
            android:id="@+id/banner_simple_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="invisible">

            <!-- channel number or source name -->

            <TextView
                android:id="@+id/banner_simple_first_line"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.35"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/nav_textsize_normal"/>
            <!-- second line of simple banner -->

            <RelativeLayout
                android:id="@+id/banner_simple_second_line_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.35"
                android:gravity="center">

                <!-- channel name -->

                <TextView
                    android:id="@+id/banner_simple_channel_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_channel_list_padTop"
                    android:layout_marginTop="@dimen/nav_channel_list_padTop"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/nav_textsize_large"/>
                <!-- input source locked icon -->

                <ImageView
                    android:id="@+id/banner_simple_lock_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/nav_banner_lock_icon"
                    android:visibility="gone"/>
            </RelativeLayout>

            <!-- third line of simple line -->

            <RelativeLayout
                android:id="@+id/banner_simple_third_line_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.30"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/banner_simple_cc"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="@dimen/nav_channel_list_item_padding"
                    android:textSize="@dimen/nav_textsize_normal"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/banner_simple_third_middle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/dark_yellow"
                    android:textSize="@dimen/nav_textsize_normal"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/banner_simple_type_time_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/banner_simple_receiver_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textColor="@color/dark_yellow"
                            android:textSize="@dimen/nav_textsize_normal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/banner_simple_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textColor="@color/dark_yellow"
                            android:textSize="@dimen/nav_textsize_normal"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- banner info bottom part : detail info panel -->

    <LinearLayout
        android:id="@+id/banner_detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/nav_infobar_basic_bg"
        android:visibility="gone">

        <!-- detail info content -->

        <TextView
            android:id="@+id/banner_detail_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:lineSpacingExtra="3dip"
            android:paddingLeft="10dip"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_textsize_normal"/>

        <LinearLayout
            android:id="@+id/banner_detail_info_right_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical"
            android:visibility="invisible">

            <!-- page up icon -->

            <ImageView
                android:id="@+id/banner_detail_info_uparrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/nav_detail_icon_arrow_up"/>
            <!-- page num -->

            <TextView
                android:id="@+id/banner_detail_info_pagenum"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="#4b5459"
                android:gravity="center"
                android:textSize="@dimen/nav_textsize_normal"/>
            <!-- page down icon -->

            <ImageView
                android:id="@+id/banner_detail_info_downarrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/nav_detail_icon_arrow_down"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
