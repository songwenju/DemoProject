<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/banner_basic_layout_eu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dp"
    android:layout_weight="1"
    android:background="@drawable/nav_infobar_basic_bg"
    android:orientation="vertical">

    <!-- current program name -->

    <LinearLayout
        android:id="@+id/banner_eu_basic_firstline"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--problem number-->
        <TextView
            android:id="@+id/banner_simple_first_line"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1233"
            android:textColor="@color/white"
            android:textSize="24sp"/>

        <!--problem  title-->
        <TextView
            android:id="@+id/banner_current_program_title_eu"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:ellipsize="end"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/nav_channel_infoTitle"
            android:textColor="@color/white"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/banner_current_program_type_eu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_textsize_large"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/banner_channel_subtitle_icon_eu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/nav_banner_icon_sttl"
            android:drawablePadding="@dimen/banner_channel_subtitle_icon_drawablePadding"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_textsize_timeduration"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/banner_special_info_eu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_textsize_large"
            android:visibility="gone"/>

        <!--Stereo Unknown-->
        <TextView
            android:id="@+id/banner_audio_language_eu"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:text="Stereo Unknow"
            android:textColor="@color/white"
            android:textSize="10sp"/>

        <!-- current audio language -->
        <!--576i SD-->
        <TextView
            android:id="@+id/banner_video_format_eu"
            android:layout_width="57dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="576i"
            android:textColor=" #37383D"
            android:textSize="10sp"/>
        <!--lock icon-->


        <ImageView
            android:id="@+id/banner_simple_receiver_type"
            android:layout_width="52dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center_horizontal"
            android:src="@drawable/type_antenna"
            android:textColor="@color/white"
            android:textSize="10sp"/>

        <!--time-->
        <TextView
            android:id="@+id/banner_simple_time"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:gravity="center_horizontal"
            android:text="20:09"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="22dp"
        android:background="#33D8D8D8"/>
    <!-- second line -->


    <!--current program layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <!-- current program duration -->
        <TextView
            android:id="@+id/banner_current_program_duration_eu"
            android:layout_width="84dp"
            android:layout_height="18dp"
            android:text="20:00-20:45"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <!-- next program name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Comedy Woman,8 ce3oh,17cepNR"
            android:textColor="@color/white"
            android:textSize="15sp"/>

    </LinearLayout>


    <!--next program layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <!-- next program duration -->
        <TextView
            android:id="@+id/banner_next_program_duration_eu"
            android:layout_width="84dp"
            android:layout_height="18dp"
            android:text="20:00-20:45"
            android:textColor="#99FFFFFF"
            android:textSize="15sp"/>

        <!-- next program name -->
        <TextView
            android:id="@+id/banner_next_program_title_eu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_toRightOf="@id/banner_next_program_duration_eu"
            android:ellipsize="end"
            android:text="Comedy Woman,8 ce3oh,17cepNR"
            android:textColor="#99FFFFFF"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/banner_channel_lock_icon_eu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="21dp"
            android:src="@drawable/nav_banner_lock_icon"
            android:textColor="@color/white"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>