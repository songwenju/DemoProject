<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/banner_info_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/nav_banner_marginTop"
              android:gravity="bottom"
              android:orientation="vertical"
              android:visibility="visible">

    <!-- banner info top part : basic and simple info panel -->

    <LinearLayout
        android:id="@+id/banner_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/nav_banner_top_layout_width"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"
        android:background="@drawable/nav_infobar_basic_bg"
        android:gravity="bottom"
        android:orientation="vertical">

        <!-- banner info top-left part : basic info panel -->

        <RelativeLayout
            android:id="@+id/banner_basic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <!-- start cn layout -->
            <LinearLayout
                android:id="@+id/banner_basic_layout_cn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/nav_banner_marginLeft"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- current program name -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/banner_current_program_title"
                        android:layout_width="56dp"
                        android:layout_height="28dp"
                        android:ellipsize="end"
                        android:gravity="top|left"
                        android:singleLine="true"
                        android:text="1223"
                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginLeft="70dp"
                        android:ellipsize="end"
                        android:gravity="top|left"
                        android:singleLine="true"
                        android:text="BBC Comedy(16+)"
                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_normal"/>
                    <!-- favorite icon -->
                    <TextView
                        android:id="@+id/banner_channel_favorite_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/nav_infobar_favorite"
                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_normal"
                        android:visibility="gone"/>

                    <!-- ttx icon -->
                    <TextView
                        android:id="@+id/banner_channel_ttx_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/nav_infobar_ttx_icon"
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/banner_simple_cc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Stereo Unknow"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/banner_simple_third_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/nav_banner_ear_icon"
                        android:text="576i"
                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_normal"
                        android:visibility="visible"/>

                    <!-- lock icon -->
                    <TextView
                        android:id="@+id/banner_channel_lock_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/nav_banner_lock_icon"
                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_normal"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/banner_simple_receiver_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_horizontal"
                        android:text="Antenna"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/banner_simple_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:gravity="center_horizontal"
                        android:text="20:09"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                </LinearLayout>


                <!--<view-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:layout_marginTop="9dp"-->
                <!--android:background="@color/white"/>-->
                <!-- second line -->


                <!--current problem info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:layout_width="84dp"
                        android:layout_height="18dp"
                        android:text="20:00-20:45"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="42dp"
                        android:text="Comedy Woman,8 ce3oh,17cepNR"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>

                </LinearLayout>

                <!--next problem info-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="84dp"
                        android:layout_height="18dp"
                        android:text="20:00-20:45"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="42dp"
                        android:text="Comedy Woman,8 ce3oh,17cepNR"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- show no signal , no channels , locked tips -->

                    <TextView
                        android:id="@+id/banner_special_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_large"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/banner_basic_second_line"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <!-- current program duration -->

                        <TextView
                            android:id="@+id/banner_current_program_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text=""
                            android:textColor="@color/dark_yellow"
                            android:textSize="@dimen/nav_textsize_timeduration"/>
                        <!-- current audio language -->

                        <TextView
                            android:id="@+id/banner_audio_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/nav_textsize_normal"/>
                    </RelativeLayout>
                </RelativeLayout>

                <!-- third line -->

                <LinearLayout
                    android:id="@+id/banner_basic_third_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.30"
                    android:visibility="gone">

                    <!-- left part of third line -->

                    <LinearLayout
                        android:id="@+id/banner_basic_third_line_left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- left top part of third line -->

                        <LinearLayout
                            android:id="@+id/banner_next_program_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6">

                            <!-- next program duration -->

                            <TextView
                                android:id="@+id/banner_next_program_duration"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_timeduration"/>
                            <!-- next program name -->

                            <TextView
                                android:id="@+id/banner_next_program_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_timeduration"/>
                        </LinearLayout>

                        <!-- left bottom part of third line -->

                        <LinearLayout
                            android:id="@+id/banner_basic_icons_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/nav_channel_list_padTop"
                            android:layout_weight="4"
                            android:visibility="gone">


                            <!-- subtitle icon -->
                            <TextView
                                android:id="@+id/banner_channel_subtitle_icon"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/nav_banner_icon_sttl"
                                android:drawablePadding="@dimen/banner_channel_subtitle_icon_drawablePadding"
                                android:textColor="@color/white"
                                android:textSize="@dimen/nav_textsize_timeduration"
                                android:visibility="visible"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- right part of third line -->

                    <LinearLayout
                        android:id="@+id/banner_basic_third_line_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- video format -->

                        <TextView
                            android:id="@+id/banner_video_format"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:textColor="@color/white"
                            android:textSize="@dimen/nav_textsize_normal"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- end cn layout -->
        </RelativeLayout>

        <!-- banner info top-right part : simple info panel -->

        <LinearLayout
            android:id="@+id/banner_simple_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- channel number or source name -->

            <TextView
                android:id="@+id/banner_simple_first_line"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.35"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/nav_textsize_normal"/>
            <!-- second line of simple banner -->

            <RelativeLayout
                android:id="@+id/banner_simple_second_line_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.35"
                android:gravity="center">

                <!-- channel name -->

                <TextView
                    android:id="@+id/banner_simple_channel_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_channel_list_padTop"
                    android:layout_marginTop="@dimen/nav_channel_list_padTop"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/nav_textsize_large"/>
                <!-- input source locked icon -->

                <TextView
                    android:id="@+id/banner_simple_lock_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/nav_banner_lock_icon"
                    android:visibility="gone"/>
            </RelativeLayout>

            <!-- third line of simple line -->

            <RelativeLayout
                android:id="@+id/banner_simple_third_line_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.30"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/banner_simple_cc_bak"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="@dimen/nav_channel_list_item_padding"
                    android:textSize="@dimen/nav_textsize_normal"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/banner_simple_third_middle_bak"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/dark_yellow"
                    android:textSize="@dimen/nav_textsize_normal"
                    android:visibility="gone"/>

                <!--<LinearLayout-->
                <!--android:id="@+id/banner_simple_type_time_layout"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent">-->

                <!--&lt;!&ndash;<LinearLayout&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_width="fill_parent"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_height="fill_parent"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_weight="1"&ndash;&gt;-->
                <!--&lt;!&ndash;android:gravity="center">&ndash;&gt;-->

                <!--&lt;!&ndash;&ndash;&gt;-->
                <!--&lt;!&ndash;</LinearLayout>&ndash;&gt;-->

                <!--&lt;!&ndash;<LinearLayout&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_width="fill_parent"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_height="fill_parent"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_weight="1"&ndash;&gt;-->
                <!--&lt;!&ndash;android:gravity="center">&ndash;&gt;-->

                <!--&lt;!&ndash;&ndash;&gt;-->
                <!--&lt;!&ndash;</LinearLayout>&ndash;&gt;-->
                <!--</LinearLayout>-->
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- banner info bottom part : detail info panel -->


</LinearLayout>
